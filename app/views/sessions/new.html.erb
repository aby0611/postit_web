<h4>Please log in</h4>

<div class='well'>
  <%= form_tag 'login' do %>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
    <br>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <br>
    <%= submit_tag 'Login', class: 'btn btn-success' %>
  <% end %>
</div>  