<%= render 'shared/error', obj: @user %>

<%= form_for @user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <br>
  <%= f.label :password %>
  <%= f.text_field :password %>
  <br>

  <%= f.submit @user.new_record? ? "Register" : "Update profile" , class: 'btn btn-primary' %>
<% end %>