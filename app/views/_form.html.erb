<% if @post.errors.full_messages.any? %>
  <div class='alert alert-error'>
    <% @post.errors.full_messages.each do |error| %>
        <li><%= error %></li>
    <% end %> 
  </div>
<% end %>

<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :url %>
  <%= f.text_field :url %>
  <br>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br>
  <%= f.submit "Create Post", class: 'btn btn-primary' %>
<% end %>